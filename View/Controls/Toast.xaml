<Window
    x:Class="SPTC_APP.View.Controls.Toast"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SPTC_APP.View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Toast"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid x:Name="parent">
        <Grid
            x:Name="toast"
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Border Background="#4CFFFFFF" CornerRadius="11">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        Direction="-90"
                        ShadowDepth="5" />
                </Border.Effect>
            </Border>
            <Border
                Padding="10,5,10,5"
                Background="White"
                CornerRadius="7">
                <TextBlock
                    x:Name="message"
                    VerticalAlignment="Center"
                    Style="{StaticResource TextBlockFontMedium}"
                    Text="This is a toast message&#x0A;Read me."
                    TextAlignment="Center" Padding="5,5,5,5" />
            </Border>
        </Grid>
    </Grid>

</Window>
