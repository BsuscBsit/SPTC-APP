<Window
    x:Class="SPTC_APP.View.GenerateID"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SPTC_APP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Generate ID"
    Width="785"
    Height="572"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="..\..\View\Images\icons\logo.ico"
    ResizeMode="NoResize"
    Style="{StaticResource CustomWindowStyle}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/ButtonsAndTextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                x:Key="ButtonBrowse"
                BasedOn="{StaticResource StrokedButtonStyle}"
                TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Source="/View/Images/icons/browse.png" />
                                    <ContentPresenter VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
                x:Key="ButtonStartCamera"
                BasedOn="{StaticResource StrokedButtonStyle}"
                TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Source="/View/Images/icons/cam.png" />
                                    <ContentPresenter VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
                x:Key="ButtonStartPad"
                BasedOn="{StaticResource StrokedButtonStyle}"
                TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Source="/View/Images/icons/pad.png" />
                                    <ContentPresenter VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="printable">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Height="40"
            Background="#FEF301"
            CornerRadius="15,15,0,0" />
        <Label
            Grid.Row="1"
            Height="Auto"
            Margin="20,0,0,0"
            Padding="0,5,5,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="ID INFORMATION"
            FontFamily="Inter"
            FontSize="20"
            FontWeight="SemiBold"
            Foreground="Gray" />
        <Grid Grid.Row="2" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="fields" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="140" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    Grid.ColumnSpan="2"
                    Width="250"
                    Height="27"
                    Margin="20,8,0,8"
                    Padding="1,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Please fill up the required information."
                    FontFamily="Inter"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Grid.IsSharedSizeScope="True" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="77"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="First Name:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxFn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="NaN"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}">
                    <TextBox.ToolTip>
                        <ToolTip Content="tis a tooltip" />
                    </TextBox.ToolTip>
                </TextBox>
                <Label
                    Grid.Row="2"
                    Width="96"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Middle Name:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxMn"
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="75"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Last Name:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxLn"
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Width="54"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Gender:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <ComboBox
                    x:Name="cbGender"
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    IsReadOnly="True"
                    SelectedIndex="0"
                    Style="{StaticResource GenericComboBox}">
                    <ComboBoxItem Content="MALE" />
                    <ComboBoxItem Content="FEMALE" />
                </ComboBox>
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Width="91"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Date of Birth:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <Border
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="33"
                    Margin="0,4,0,4"
                    Padding="5,0,5,0"
                    VerticalAlignment="Center"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <DatePicker
                        x:Name="bDay"
                        Grid.Column="1"
                        Height="31"
                        VerticalContentAlignment="Center"
                        BorderThickness="0" />
                </Border>
                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Width="81"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="License No.:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxLnum"
                    Grid.Row="6"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Width="66"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="SPTC No.:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxBnum"
                    Grid.Row="7"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
                <Label
                    Grid.Row="8"
                    Width="134"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="House No, &amp; Street:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxAddressB"
                    Grid.Row="8"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
                <Label
                    Grid.Row="9"
                    Grid.Column="0"
                    Width="148"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Brgy, City, &amp; Province:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxAddressS"
                    Grid.Row="9"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}" />
                <Label
                    Grid.Row="10"
                    Grid.Column="0"
                    Width="107"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Contact Person:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxEmePer"
                    Grid.Row="10"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,-1,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
                <Label
                    Grid.Row="11"
                    Grid.Column="0"
                    Width="85"
                    Height="18"
                    Margin="20,0,0,0"
                    Padding="-1,-1,-1,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Contact No.:"
                    FontFamily="Inter"
                    FontSize="15"
                    FontWeight="SemiBold" />
                <TextBox
                    x:Name="tboxPhone"
                    Grid.Row="11"
                    Grid.Column="1"
                    Height="31"
                    Margin="0,4,0,4"
                    VerticalAlignment="Center"
                    Style="{StaticResource GenericTextBox}"
                    Text="" />
            </Grid>
            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                <Label
                    x:Name="lblPhoto"
                    Height="Auto"
                    Margin="0,8,0,8"
                    Padding="0,5,0,5"
                    HorizontalAlignment="Center"
                    Content="ID Photograph"
                    FontFamily="Inter"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray" />
                <StackPanel>
                    <Image
                        x:Name="imgIDPic"
                        Width="200"
                        Height="200"
                        Source="/View/Images/album.png"
                        Stretch="UniformToFill" />
                    <ProgressBar
                        x:Name="pbCameraOpen"
                        Height="8"
                        IsIndeterminate="false"
                        Visibility="Hidden" />
                </StackPanel>
                <StackPanel>
                    <Button
                        x:Name="btnStartCam"
                        Width="175"
                        Height="30"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="BtnStartCam_Click"
                        Content="Start Camera"
                        Style="{StaticResource ButtonStartCamera}" />
                    <Button
                        x:Name="btnBrowseIDPic"
                        Width="175"
                        Height="30"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="btnBrowseIDPic_Click"
                        Content="Browse"
                        Style="{StaticResource ButtonBrowse}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="15,0,20,0">
                <Label
                    x:Name="lblsign"
                    Height="Auto"
                    Margin="0,8,0,8"
                    Padding="0,5,0,5"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="E-signature"
                    FontFamily="Inter"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray" />
                <Viewbox Width="200" Height="208">
                    <Image
                        x:Name="imgSignPic"
                        Width="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/View/Images/sign.png"
                        Stretch="UniformToFill" />
                </Viewbox>
                <StackPanel>
                    <Button
                        x:Name="btnStartPad"
                        Width="175"
                        Height="30"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Content="Start Pad"
                        Style="{StaticResource ButtonStartPad}" />
                    <Button
                        x:Name="btnBrowseSignPic"
                        Width="175"
                        Height="30"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Click="btnBrowseSignPic_Click"
                        Content="Browse"
                        Style="{StaticResource ButtonBrowse}" />
                </StackPanel>

            </StackPanel>
            <Button
                x:Name="btnSave"
                Grid.Column="2"
                Width="174"
                Height="40"
                Margin="0,0,0,4"
                VerticalAlignment="Bottom"
                Click="btnPreview_Click"
                Content="PREVIEW"
                Style="{StaticResource GenericButton}" />
            <Button
                x:Name="btnCancel"
                Grid.Column="1"
                Width="172"
                Height="40"
                Margin="1,0,0,4"
                VerticalAlignment="Bottom"
                Click="btnCancel_Click"
                Content="CANCEL"
                Style="{StaticResource GenericButton}" />
            <StackPanel
                Grid.Column="2"
                Margin="0,0,0,54"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <ToggleButton
                    x:Name="MySwitch"
                    Width="48"
                    Height="33"
                    Background="Transparent"
                    Checked="MySwitch_Back"
                    Unchecked="MySwitch_Front">
                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Viewbox>
                                            <Border
                                                x:Name="Border"
                                                Width="40"
                                                Height="20"
                                                Background="#FFFEF301"
                                                CornerRadius="10">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        Direction="0"
                                                        Opacity="0.3"
                                                        ShadowDepth="0.5" />
                                                </Border.Effect>
                                                <Ellipse
                                                    x:Name="Ellipse"
                                                    Margin="2,1,2,1"
                                                    HorizontalAlignment="Stretch"
                                                    Fill="#FFFFFFFF"
                                                    Stretch="Uniform"
                                                    Stroke="Gray"
                                                    StrokeThickness="0.2">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="10"
                                                            Direction="260"
                                                            Opacity="0.3"
                                                            ShadowDepth="1" />
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </Border>
                                        </Viewbox>
                                        <ControlTemplate.Triggers>
                                            <EventTrigger RoutedEvent="Checked">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FF4CD661"
                                                            Duration="0:0:0.1" />
                                                        <ThicknessAnimation
                                                            Storyboard.TargetName="Ellipse"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="20 1 2 1"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Unchecked">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FFFEF301"
                                                            Duration="0:0:0.1" />
                                                        <ThicknessAnimation
                                                            Storyboard.TargetName="Ellipse"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="2 1 2 1"
                                                            Duration="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <Label
                    x:Name="drvOrOprt"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Center"
                    Content="Create this ID for&#xA;Driver."
                    FontFamily="Inter"
                    FontSize="14"
                    FontWeight="SemiBold" />

            </StackPanel>
        </Grid>

    </Grid>
</Window>
