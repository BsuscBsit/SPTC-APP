<Window x:Class="SPTC_APP.View.Pages.Input.ViolationInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPTC_APP.View.Pages.Input"
        mc:Ignorable="d"
        Title="ViolationInput">
    <Grid x:Name="franchisePanel" HorizontalAlignment="Right" Width="760" Background="WhiteSmoke">
        <Rectangle Height="40" Stroke="#FEF301" Fill="#FEF301"  VerticalAlignment="Top" Width="NaN"/>
        <Label 
               Content="VIOLATION" 
               Height="Auto" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"
               Foreground="Gray" 
               FontSize="20"
               FontFamily="Inter"
               Margin="42,45,0,425"/>

        <Grid Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Violation:"
                           Grid.Column="0"
                           Height="Auto" 
                           HorizontalAlignment="Stretch" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="14"
                           FontFamily="Inter" Margin="406,101,87,366"/>
            <TextBox x:Name="tboxOperatorsFname"               
                            Text="" 
                            Width="164"
                            Height="30"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Center" Margin="546,101,40,363">
            </TextBox>


            <Label Content="Remarks:"
                Grid.Column="0"
                Height="28" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                FontSize="14"
                FontFamily="Inter" Margin="406,160,97,306"/>

            <TextBox x:Name="tboxOperatorsMname"               
                Text="" 
                Width="164"
                Height="30"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center" Margin="546,158,40,306"/>

        </Grid>





        <Button x:Name="btnCancelNewOperator" Content="CANCEL" Width="135" Height="40"
                    FontWeight="Bold"
                    FontFamily="Hetivica"
                    Background="White" Margin="134,426,491,38"/>

        <Button x:Name="btnSaveNewOperator" Content="SAVE" Width="135" Height="40"
                    FontWeight="Bold"
                    FontFamily="Hetivica"
                    Background="Yellow" Margin="480,426,145,38"/>
        <Calendar HorizontalAlignment="Left" Margin="52,127,0,0" VerticalAlignment="Top" Height="260" Width="270"/>







    </Grid>
</Window>
