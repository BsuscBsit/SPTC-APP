<Window x:Class="SPTC_APP.View.Pages.Output.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPTC_APP.View.Pages.Output"
        mc:Ignorable="d"
        Title="DashboardView">
    <Grid x:Name="mainpanel"  Height="450" Width="800">
        <Button
                x:Name="btnGererate"
                Width="175"
                Height="40"
                Margin="0,80,30,0"
                HorizontalAlignment="Right"
            Style="{StaticResource CommonButtonStyle}"
                VerticalAlignment="Top"
                Click="btnGererate_Click"
                Content="GENERATE ID"/>
        <Button
                x:Name="btnTest"
                Width="175"
                Height="40"
                Margin="0,134,30,0"
                HorizontalAlignment="Right"
            Style="{StaticResource CommonButtonStyle}"
                VerticalAlignment="Top"
                Content="TEST" Click="btnTest_Click"/>
        <Button
                x:Name="btnReload"
                Width="175"
                Height="40"
                Margin="0,187,30,0"
                HorizontalAlignment="Right"
            Style="{StaticResource CommonButtonStyle}"
                VerticalAlignment="Top"
                Content="RELOAD" Click="btnReload_Click"/>
        <Border BorderBrush="Black" Background="White" CornerRadius="5" BorderThickness="1" Margin="20, 0, 0, 20" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Canvas x:Name="cvBarChart" Background="White" Width="480" Height="240" Margin="60, 60, 20, 20" />
        </Border>
        <Border BorderBrush="Black" Background="White" CornerRadius="5" BorderThickness="1" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="250" Width="190">
            <Grid>
                <Canvas x:Name="cvPieChart" Background="White" Width="175" Height="175" VerticalAlignment="Bottom" Margin="5">
                    <Path Stroke="Black" StrokeThickness="1" Fill="LightGray">
                        <Path.Data>
                            <EllipseGeometry x:Name="cvPieCircle" Center="87.5, 87.5" RadiusX="87" RadiusY="87"/>
                        </Path.Data>
                    </Path>
                </Canvas>
                <Label x:Name="tbPieChartTitle" Content="" Style="{StaticResource CommonTitlePreset}" FontSize="16" FontWeight="Bold" Foreground="Black" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Label x:Name="tbPieChart" Content="0" Style="{StaticResource CommonTitlePreset}" FontSize="16" Height="30" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,30,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
