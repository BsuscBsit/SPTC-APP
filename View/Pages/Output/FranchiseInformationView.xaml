<Window x:Class="SPTC_APP.View.Pages.Output.FranchiseInformationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPTC_APP.View.Pages.Output"
        mc:Ignorable="d"
        Title="FranchiseInformationView">
    <Grid x:Name="FranchisePanel" Height="560" Width="786" Background="LightGray">
        <Grid x:Name="franchiseInformation" HorizontalAlignment="Left" VerticalAlignment="Center" Height="428" Background="White" Margin="49,0,0,0" Width="708" >
            <Grid.RowDefinitions>
                <RowDefinition Height="104*"/>
                <RowDefinition Height="229*"/>
            </Grid.RowDefinitions>

            <Ellipse Width="62" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,68,0,0" Grid.RowSpan="2">
                <Ellipse.Fill>
                    <ImageBrush x:Name="imgProfilePic" ImageSource="/SPTC APP;component/View/Images/icons/person.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Label Content="Body No." HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="10"
                    Foreground="DarkGray"/>
            <Label x:Name="lblbodyNumber" Content="101" HorizontalAlignment="Left" Margin="75,10,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="DemiBold"
                    FontFamily="Arial"
                    FontStretch="SemiExpanded"
                    FontSize="16"/>
            <Label Content="Plate No:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="10"
                    Foreground="DarkGray"/>
            <Label x:Name="lblPlateNo" Content="GAV 635" HorizontalAlignment="Left" Margin="73,42,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    FontFamily="Arial"
                    FontStretch="SemiExpanded"
                    FontSize="10"/>
            <Label Content="MTOP No:" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="10"
                    Foreground="DarkGray"/>
            <Label x:Name="lblMTOPNo" Content="11001" HorizontalAlignment="Left" Margin="73,69,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    FontFamily="Arial"
                    FontStretch="SemiExpanded"
                    FontSize="10"/>

            <Label Content="Operators Name" HorizontalAlignment="Left" Margin="235,75,0,0" VerticalAlignment="Top"
                       FontWeight="Medium"
                        FontSize="9"
                       Foreground="DarkGray"/>
            <Label x:Name="lblOperatorName" Content="Juan Dela Cruz" HorizontalAlignment="Left" Margin="325,73,0,0" VerticalAlignment="Top"
                       Foreground="Black"
                       FontWeight="DemiBold"
                       FontFamily="Arial"
                       FontStretch="SemiExpanded"
                       FontSize="14"/>

            <Label Content="Birthdate" HorizontalAlignment="Left" Margin="235,97,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="9"
                    Foreground="DarkGray" Grid.RowSpan="2"/>
            <Label x:Name="lblDateOfBIrth" Content="December, 18 2000" HorizontalAlignment="Left" Margin="325,99,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="DemiBold"
                    FontFamily="Arial"
                    FontStretch="SemiExpanded"
                    FontSize="9" Grid.RowSpan="2"/>

            <Label Content="Reference :" HorizontalAlignment="Left" Margin="235,119,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="9"
                    Foreground="DarkGray" Grid.RowSpan="2"/>
            <Label Content="+ 639462244026" HorizontalAlignment="Left" Margin="325,121,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="DemiBold"
                    FontFamily="Helvetica"
                    FontStretch="SemiExpanded"
                    FontSize="9" Grid.RowSpan="2"/>

            <Label Content="Driver Day " HorizontalAlignment="Left" Margin="235,4,0,0" VerticalAlignment="Top"
                    FontWeight="Medium"
                    FontSize="9"
                    Foreground="DarkGray" Grid.Row="1"/>
            <Label x:Name="lblDriverName" Content="" HorizontalAlignment="Left" Margin="325,6,0,0" VerticalAlignment="Top"
                    Foreground="Black"
                    FontWeight="DemiBold"
                    FontFamily="Helvetica"
                    FontStretch="SemiExpanded"
                    FontSize="9" Grid.Row="1"/>
            <Button 
                x:Name="btnChangeDriver"
                Height="25"
                Margin="538,0,28,25"
                VerticalAlignment="Bottom"  
                Content="CHANGE DRIVER"
                Visibility="Hidden"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnChangeDriver_Click"/>
            <Button 
                x:Name="btnDeleteFranchise"
                Height="25"
                Margin="538,0,28,65"
                VerticalAlignment="Bottom"
                Visibility="Hidden"
                Content="DELETE"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnDeleteFranchise_Click"/>
            <Button
                x:Name="btnHistory"
                Height="26"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Margin="51,0,532,204"
                VerticalAlignment="Bottom"  
                Content="History" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnHistory_Click"/>

            <Button
                x:Name="btnCoding"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,173"
                VerticalAlignment="Bottom"  
                Content="Coding" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnCoding_Click"/>
            <Button
               x:Name="btnViolation"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,142"
                VerticalAlignment="Bottom"  
                Content="Violation" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnViolation_Click"/>
            <Button
               x:Name="btnShareCapital"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,111"
                VerticalAlignment="Bottom"  
                Content="Share Capital Ledger" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="9" Click="btnShareCapital_Click"/>
            <Button
               x:Name="btnLoan"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,80"
                VerticalAlignment="Bottom"  
                Content="Loan Ledger" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnLoan_Click"/>

            <Button
               x:Name="btnLTLoan"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,49"
                VerticalAlignment="Bottom"  
                Content="LT Loan Ledger" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnLTLoan_Click" />
            <Button
               x:Name="btnTransactionHistory"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Margin="51,0,532,18"
                VerticalAlignment="Bottom"  
                Content="Transfer History" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Click="btnTransactionHistory_Click"/>



            <Grid x:Name="ModuleGrid" Grid.Row="1" Margin="0,0,15,45" Width="512" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="200"/>

            <Button
               x:Name="btnAddButton"
                Visibility="Collapsed"
                Style="{DynamicResource ControlledButtonStyle}"
                BorderThickness="1"
                Background="White"
                Height="26"
                Width="100"
                VerticalAlignment="Bottom"  
                HorizontalAlignment="Right"
                Content="ADD RECORD" Grid.Row="1"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="10" Margin="0,0,32,18" Click="btnAddButton_Click"/>

        </Grid>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="37,26,0,0" VerticalAlignment="Top" Click="btnBack_Click"/>
    </Grid>
</Window>

